#include <iostream>
#include <Windows.h>

using namespace std;
const int genislik=80;
const int yukseklik=20;
void coordxy(int x,int y){
	COORD coord;
	coord.X=x;
	coord.Y=y;
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE),coord);
	//SetConsoleCursorPosition  is the function used to change the coordinates-(Windows.h)
	
	
}

int main(){
	for(int i=0;i<genislik;i++){
		cout<<"a";
		Sleep(100);
	}
	for(int i=0;i<yukseklik;i++){
		coordxy(genislik-1,i);
		cout<<"a";
		Sleep(100);
	}
	for(int i=0;i<genislik;i++){
		coordxy(genislik-1-i,yukseklik-1);
		cout<<"a";
		Sleep(100);
	}
	for(int i=0;i<yukseklik;i++){
		coordxy(0,yukseklik-1-i);
		cout<<"a";
		Sleep(100);
	}
	
	cin.get();
}
